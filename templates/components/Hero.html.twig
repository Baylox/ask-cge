<section
  {{ attributes.defaults({
    class: 'relative grid ' ~ this.heightClass() ~ ' place-items-center text-center text-white',
    role:  'banner',
    'aria-labelledby': 'hero-title',
  }) }}
>
  <picture class="absolute inset-0 -z-10">
    <img
      src="{{ asset(bg) }}"
      sizes="100vw"
      alt=""
      fetchpriority="high" loading="eager" decoding="async"
      class="w-full h-full object-cover object-center"
    >
  </picture>

  {# Behind the content #}
  <div class="absolute inset-0 -z-10 pointer-events-none bg-gradient-to-b from-black/20 to-black/60"></div>

  {# Content above #}
  <div class="relative z-10 px-4 max-w-xl">
    <h1 id="hero-title" class="text-3xl md:text-4xl font-extrabold mb-3">
      {{ title }}
    </h1>

    {% if subtitle %}
      <p class="text-base md:text-lg opacity-90 mb-5">{{ subtitle }}</p>
    {% endif %}

    {% if ctaHref and ctaLabel %}
      <a href="{{ ctaHref }}" class="btn btn-primary btn-wide shadow-lg">
        {{ ctaLabel }}
      </a>
    {% endif %}
  </div>
</section>


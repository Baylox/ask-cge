{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <h1>Account</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ account.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ account.password }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ account.role }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ account.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ account.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ account.lastname }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_account_index') }}">back to list</a>

    <a href="{{ path('app_account_edit', {'id': account.id}) }}">edit</a>

    {{ include('account/_delete_form.html.twig') }}
{% endblock %}
